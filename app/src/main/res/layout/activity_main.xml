<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/refreshLayout">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="#FAFAFA">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="72dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="#FAFAFA">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="56dp"
                android:layout_height="fill_parent"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/img0"
                    android:background="#FAFAFA"
                    android:src="@drawable/temperature"
                    android:tint="#000000"
                    android:scaleType="fitCenter"
                    android:alpha="0.54" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="N/A"
                android:id="@+id/labelTemperature"
                android:textColor="#000000"
                android:gravity="center_vertical|center"
                android:alpha="0.54"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="#FAFAFA"
            android:paddingLeft="24dp"
            android:paddingRight="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Éclairage"
                android:id="@+id/textView2"
                android:textColor="#000000"
                android:alpha="0.54"
                android:gravity="center_vertical" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img5"
                android:src="@drawable/power_switch"
                android:scaleType="fitCenter"
                android:layout_marginLeft="192dp"
                android:padding="5dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:cropToPadding="false"
                android:elevation="4dp"
                android:tint="#000000"
                android:background="#FAFAFA"
                android:layout_marginRight="8dp"
                android:alpha="0.87" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="#FAFAFA"
            android:elevation="1dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:id="@+id/seekLayout"
            android:visibility="invisible">

            <SeekBar
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekLed"
                android:splitTrack="false"
                android:max="340"
                android:progress="0" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="48">

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/img3"
                    android:layout_weight="50"
                    android:alpha="0.54"
                    android:background="#fffafafa"
                    android:src="@drawable/living_room"
                    android:tint="#000000"
                    android:scaleType="fitCenter"
                    android:layout_margin="30dp" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/img4"
                    android:layout_weight="50"
                    android:alpha="0.54"
                    android:background="#fffafafa"
                    android:layout_margin="30dp"
                    android:scaleType="fitCenter"
                    android:tint="#000000"
                    android:src="@drawable/bed_lamp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="48">

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/img1"
                    android:layout_weight="50"
                    android:alpha="0.54"
                    android:background="#fffafafa"
                    android:layout_margin="30dp"
                    android:scaleType="fitCenter"
                    android:tint="#000000"
                    android:src="@drawable/desk_led"
                    android:paddingRight="4dp" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/img2"
                    android:layout_weight="50"
                    android:alpha="0.54"
                    android:background="#fffafafa"
                    android:layout_margin="30dp"
                    android:scaleType="fitCenter"
                    android:tint="#000000"
                    android:src="@drawable/desk_lamp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:paddingLeft="41dp"
                android:paddingRight="41dp"
                android:layout_weight="4"
                android:visibility="invisible"
                android:id="@+id/layoutNextBus">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Prochain bus à : "
                    android:id="@+id/textView"
                    android:textColor="#000000"
                    android:alpha="0.34"
                    android:gravity="bottom|right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="..."
                    android:id="@+id/labelNextBus"
                    android:gravity="bottom"
                    android:textColor="@color/black"
                    android:alpha="0.87" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.SwipeRefreshLayout>